<!--the laser at the base of the robot -->
<xacro:my_link name="torso_laser" mass="0.5" color="Black">
   <box size="0.05 0.065 0.12" /> 
   <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
   <origin xyz="-0.005 0.0 -0.065" rpy="0 0 0" />
   <inertia ixx="0.0001"  ixy="0"  ixz="0" iyy="0.0001" iyz="0" izz="0.0001" /> 
</xacro:my_link>

<xacro:my_joint name="laser_tilt_joint" type="revolute" parent="trunk" child="torso_laser">
   <origin xyz="0.22 0.0 -0.1" rpy="3.14 1.57 0.0 "/><!-- ToDo: replace position -->
   <dynamics damping="0.1" friction="0"/><!--ToDo: update-->
   <axis xyz="0 1 0"/>
   <limit effort="13.4" velocity="1.0" lower="-0.7809" upper="1.5708" /> <!--ToDo: update-->
</xacro:my_joint>

