<xacro:my_link name="torso_lasertop" mass="0.01" color="Red"><!--Changed color to red to make it work-->
   <box size="0.05 0.065 0.01" />
   <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
   <origin xyz="-0.005 0.0 0.0" rpy="0 0 0" />
   <inertia ixx="0.0001"  ixy="0"  ixz="0" iyy="0.0001" iyz="0" izz="0.0001" /> 
</xacro:my_link>

<joint name="torso_lasertop_joint" type="fixed">
    <parent link="torso_laser"/>
    <child link="torso_lasertop"/>
</joint>

